<div class="m-4">
    <h3>Create Course</h3>

    <form method="POST" action="/courses/store">
        <div class="name">
            <label for="name">Name course</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description course</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="videoId">Video Id course</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


</div>